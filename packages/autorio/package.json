{
  "name": "autorio.ts",
  "version": "0.1.0",
  "description": "An automation mod for Factorio written in TypeScript.",
  "author": "LemonNekoGH",
  "license": "MIT",
  "keywords": [
    "factorio",
    "automation",
    "mod",
    "typescript"
  ],
  "scripts": {
    "build": "tstl",
    "dev": "mkdir -p dist && cp -r info.json dist && tstl --watch",
    "typecheck": "tstl --noEmit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.1.0",
    "@proj-airi/tstl-plugin-reload-factorio-mod": "workspace:*",
    "eslint": "^9.38.0",
    "lua-types": "^2.13.1",
    "typed-factorio": "^3.33.0",
    "typescript": "^5.9.3",
    "typescript-to-lua": "^1.32.0"
  }
}
